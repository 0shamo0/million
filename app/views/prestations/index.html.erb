<p id="notice"><%= notice %></p>

<h1>Prestations</h1>

<table>
  <thead>
    <tr>
      <th>Designation</th>
      <th>Prix</th>
      <th>Reduction</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prestations.each do |prestation| %>
      <tr>
        <td><%= prestation.designation %></td>
        <td><%= prestation.prix %></td>
        <td><%= prestation.reduction %></td>
        <td><%= link_to 'Show', prestation %></td>
        <td><%= link_to 'Edit', edit_prestation_path(prestation) %></td>
        <td><%= link_to 'Destroy', prestation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

