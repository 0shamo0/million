<p id="notice"><%= notice %></p>

<h1>Plannifications</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Localisation</th>
      <th>Etat</th>
      <th>Prestation id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plannifications.each do |plannification| %>
      <tr>
        <td><%= plannification.date %></td>
        <td><%= plannification.localisation %></td>
        <td><%= plannification.etat %></td>
        <td><%= plannification.prestation.designation %></td>
        <td><%= link_to 'Show', plannification %></td>
        <td><%= link_to 'Edit', edit_plannification_path(plannification) %></td>
        <td><%= link_to 'Destroy', plannification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

